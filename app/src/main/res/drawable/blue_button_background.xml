
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние: отключена (disabled) -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Серый цвет при КД -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Состояние: включена (по умолчанию) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#372F85" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>