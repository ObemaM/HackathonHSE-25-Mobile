<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B0C4DE"
    android:padding="20dp">


    <!-- Поле "БРИГАДА" -->
    <TextView
        android:id="@+id/textViewBrigade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="БРИГАДА"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextBrigade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewBrigade"
        android:layout_marginTop="4dp"
        android:background="@drawable/white_input_background"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textColorHint="#666666"
        android:inputType="number"
        android:hint="Введите номер бригады" />



    <!-- Кнопка А -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextBrigade"
        android:layout_marginTop="24dp"
        android:background="@drawable/blue_button_background"
        android:padding="16dp"
        android:text="КНОПКА А"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Кнопка B -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonA"
        android:layout_marginTop="12dp"
        android:background="@drawable/blue_button_background"
        android:text="КНОПКА B"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <!-- Кнопка Отправить данные -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonB"
        android:layout_marginTop="24dp"
        android:background="@drawable/blue_button_background"
        android:text="ОТПРАВИТЬ ДАННЫЕ"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <TextView
        android:id="@+id/textBottomInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="#000000"
        android:gravity="center"
        android:padding="8dp" />

</LinearLayout>