<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B0C4DE"
    android:padding="16dp">

    <!-- Поле "БРИГАДА" -->
    <TextView
        android:id="@+id/textViewBrigade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="БРИГАДА"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextBrigade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/white_input_background"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textColorHint="#666666"
        android:inputType="number"
        android:hint="Введите номер бригады" />

    <!-- Поле поиска -->
    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/white_input_background"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textColorHint="#666666"
        android:inputType="text"
        android:hint="Найдите действие"
        android:drawableStart="@drawable/search_icon_custom" />

    <!-- Список кнопок-действий -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewActions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@drawable/custom_scrollbar"
        android:scrollbarSize="5dp" />

    <!-- Кнопка отправки -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/blue_button_background"
        android:text="ОТПРАВИТЬ ДАННЫЕ"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <!-- Инфо внизу -->
    <TextView
        android:id="@+id/textBottomInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="#000000"
        android:gravity="center"
        android:padding="8dp" />

</LinearLayout>